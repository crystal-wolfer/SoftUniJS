<main>

  <section id="details-page">

    <div class="main_card">
      <div class="card_left">
        <div class="card_datails">

          <h1>{{title}}</h1>
          <div class="card-movie">
            <div class="first-info">
              <p class="card-genre">Genre: {{genre}}</p>
              <p class="card-director">Directror: {{director}}</p>
            </div>
            <div class="second-info">
              <p class="card-year">Year: {{year}}</p>
              <p class="card-ranking">Rating:
                <span id="stars">{{stars}}</span></p>
            </div>

          </div>

          <p class="disc">Description: {{description}}</p>
            <a class="btn" href="/">Back</a>
            {{#if isOwner}}
            <a class="btn" href="/movies/details/{{_id}}/add-cast">Add Cast</a>
            <a class="btn" href="/movies/details/{{_id}}/edit">Edit</a>
            <a class="btn" href="/movies/details/{{_id}}/delete">Delete</a>
            {{/if}}

        </div>
      </div>
      <div class="card_right">
        <img src="{{imageUrl}}" alt="image" />
      </div>

    </div>

    <div class="main-cast-card">
      {{#each cast}}
        <div class="cast-card">
          <div class="card-img">
            <img src="{{imageUrl}}" alt="cast" />
          </div>
          <div class="cast-info">
            <h1>{{name}}</h1>
            <h3>Age: {{age}}</h3>
            <h3>Born: {{born}}</h3>
            <h3>Name in Movie: {{character}}</h3>
          </div>
        </div>
      {{/each}}
    </div>

  </section>

</main>