<main>

  <section id="create-cast">
    <div class="createCastSection">
      <div class="info-cast">
        <h2>"You're gonna need a bigger boat." â€” "Jaws," 1975.</h2>
      </div>

      <form method="POST" class="createCastForm">
        <h2>Add Cast</h2>
        <ul class="noBullet">
          <li>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" {{#if errorN}}class="error"{{else}}class="inputFields"{{/if}} {{#if name}} value="{{name}}"{{/if}}/>
          </li>
          <li>
            <label for="age">Age:</label>
            <input
              type="number"
              id="age"
              name="age"
              {{#if errorA}}class="error"{{else}}class="inputFields"{{/if}}
              {{#if age}} value="{{age}}"{{/if}}
            />
          </li>
          <li>
            <label for="born">Born:</label>
            <input type="text" id="born" name="born" {{#if errorB}}class="error"{{else}}class="inputFields"{{/if}} {{#if born}} value="{{born}}"{{/if}} />
          </li>
          <li>
            <label for="name-in-movie">Name in Movie:</label>
            <input
              type="text"
              id="name-in-movie"
              name="character"
              {{#if errorC}}class="inputFields error"{{else}}class="inputFields"{{/if}} 
              {{#if character}} value="{{character}}"{{/if}}
            />
          </li>
          <li>
            <label for="image">Cast Image:</label>
            <input
              type="text"
              id="image"
              name="imageUrl"
              {{#if errorI}}class="error"{{else}}class="inputFields"{{/if}} 
              {{#if imageUrl}} value="{{imageUrl}}"{{/if}}
            />
          </li>
          <li id="center-btn">
            <button type="submit" id="create-btn">Add Cast</button>
          </li>
        </ul>
      </form>

    </div>
  </section>

</main>