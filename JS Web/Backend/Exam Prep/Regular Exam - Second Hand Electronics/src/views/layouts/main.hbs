<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Second Hand Electronics</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  {{#each errorMessages}}
    <div>
        <div class="errorContainer">
            <p>{{this}}</</p>
        </div>
    </div>
  {{/each}}

    <div id="container">

        <nav>
            <ul>
                <!--For all users-->
                <li><a href="/">Home</a></li>
                <li><a href="/products/catalog">Catalog</a></li>
                <!--For loggin users-->
                {{#if isAuthenticated}}
                <li><a href="/products/create">Create Offer</a></li>
                <li><a href="/search">Search</a></li>
                <li><a href="/users/logout">Logout</a></li>
                <!--For guest user-->
                {{else}}
                <li><a href="/users/login">Login</a></li>
                <li><a href="/users/register">Register</a></li>
                {{/if}}

            </ul>
        </nav>

      {{{body}}}

        <footer>@SoftUni - JS Back-End - Second Hand Electronics 2023</footer>

        {{!-- Script that adds spacing to the error messages --}}
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const containers = document.querySelectorAll('.errorContainer');
            containers.forEach((container, index) => {
                const spacing = 8; // spacing in pixels
                const initialTop = 13; // initial top percentage
                const topOffset = initialTop + (index * 12) + '%';
                container.style.top = `calc(${topOffset} + ${spacing}px)`;
            });
        });
    </script>
    </div>

</body>

</html>

