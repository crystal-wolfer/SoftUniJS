<section id="detailsPage">
  <div id="detailsInfo">
    <h1>Name: {{name}}</h1>
    <div class="info"><img src="{{imageUrl}}" /></div>

    <div class="info">
      <h3>Type: {{type}}</h3>
      <h3>Year of Production: {{production}}</h3>
      <h3>Years of Exploitation: {{exploitation}}</h3>
      <h3>Damages: {{damages}}</h3>
      <h3>Description: {{description}}</h3>
      <h2>Price: ${{price}}</h2>
    </div>

    <!--If there is user logged in-->
    <div class="buttons">

      <!--If user is not owner of the toy post-->
    {{#if isLoggedIn}}
      {{#if hasBought}}
      <!--If user is not the owner and is bought this toy-->
      <p><span class="buy">Thank You For Your Purchase</span></p>
      {{else}}
      <a href="/products/details/{{_id}}/buy" class="buy-btn">Buy</a>
      {{/if}}
    {{/if}}
      

      <!--If user is owner-->
      {{#if isOwner}}
      <a href="/products/details/{{_id}}/edit" class="edit-btn">Edit</a>
      <a href="/products/details/{{_id}}/delete" class="delete-btn">Delete</a>
      {{/if}}


    </div>
  </div>
  </section>