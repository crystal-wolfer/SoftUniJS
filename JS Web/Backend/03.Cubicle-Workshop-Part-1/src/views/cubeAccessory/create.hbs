<main>
  <h1>Create Accessory</h1>
  <div class="form">
  <!-- no action tag needed if the request is made on the same page left intentionally here-->
    <form action="/accessories/create" method="POST">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" {{#if errorN}}class="error"{{/if}} {{#if name}} value="{{name}}"{{/if}}/>
      <label for="name">Description</label>
      <textarea id="description" name="description" {{#if errorD}}class="error"{{/if}}>{{#if description}}{{description}}{{/if}}</textarea>
      <label for="image">ImageUrl</label>
      <input type="text" id="image" name="imageUrl" {{#if errorI}}class="error"{{/if}} {{#if imageUrl}} value="{{imageUrl}}"{{/if}}/>
      <input type="submit" value="Create" />
    </form>
  </div>
</main>